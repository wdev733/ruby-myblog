
<%= render 'shared/errors', obj: @user %>
<div class= "row">
  <div class="col-xs-12">

    <%= form_for(@user, :html => {class: "form-horizontal", role: "form"}) do |f| %>
    
    <div class= "form-group">
          <%= f.label :username, class: "control-label col-sm-2" %>
      <div class= "col-sm-2">
          <%= f.text_field :username, class: "form-control", placeholder: "Username", autofocus: true %>
      </div>
    </div>

    <div class="form-group">
          <%= f.label :avatar, class: "control-label col-sm-2" %>
      <div class= "col-sm-4">
          <%= f.file_field :avatar, class: "form-control" %>
      </div>
    </div>



    <div class="form-group">
          <%= f.label :email, class: "control-label col-sm-2" %>
      <div class= "col-sm-4">
          <%= f.email_field :email, class: "form-control", placeholder: "Email", autofocus: true %>
      </div>
    </div>

    <div class="form-group">
          <%= f.label :password, class: "control-label col-sm-2" %>
      <div class= "col-sm-4">
          <%= f.password_field :password, class: "form-control", placeholder: "Password", autofocus: true %>
      </div>
    </div>

    <div class= "form-group">
      <div class= "col-sm-offset-2 col-sm-2">
          <%= f.submit(@user.new_record? ? "Signup" : "update your account", class: "btn btn-danger btn-lg")%>
      </div>
    </div>

    <div class="col-xs-4 col-xs-offset-4">
      [ <%= link_to "Cancel request and return to articles listing", articles_path %> ]
    </div>


  </div>
</div>

<% end %>
