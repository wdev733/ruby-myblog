<% if params[:action] == 'search' %>
 	<%= render 'layouts/msgs' %>
<% end %>

<div class="container">
	<% if @objs %>
		<% if @objs.size > 0 %>
			<div class="results-block well col-md-8 col-md-offset-2">
				
					<p align="center"> <strong> Articles</strong></p>
					<hr>
					<table class="col-md-12" >
						<% @objs.each do |r| %>
							<% if r.instance_of? (Article) %>
								<tr>
									<td> <strong> Title :</strong>  <%= r.title  %></td>
									<td> <strong> Description :</strong> <%= truncate(r.description, length: 30) %></td>
									<td><%= link_to "View", article_path(r), class: "btn btn-xs btn-success" %></td>
								</tr>
							<% else %>
								<tr>
									<td> <strong> Username :</strong>  <%= r.username  %></td>
									<td> <strong> Email :</strong> <%= truncate(r.email, length: 30) %></td>
									<td><%= link_to "View", user_path(r), class: "btn btn-xs btn-success" %></td>
								</tr>
							<% end %>
						<% end %>
					</table>
			</div>
		<% end %>
	<% end %>
</div>


