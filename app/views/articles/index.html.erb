
<div class= "table-responsive">
  <table border="0" class= "table">
      <tr>
      <th> Titles </th>
      <th>Descriptions</th>
      <th colspan="3" align="center">Table Actions</th>
    </tr>
    <% @articles.each do |ar| %>
    <tr>
      <td > <%= ar.title %> </td>
      <td> <%= truncate(ar.description, length: 50) %>  </td>
      <td> <%= link_to 'Edit', edit_article_path(ar), class:"btn btn-xs btn-primary btn-indix"%> </td>
      <td> <%= link_to 'Show', article_path(ar), class:"btn btn-xs btn-success btn-indix" %> </td>
      <td> <%= link_to 'Delete', article_path(ar), method: :delete, data: {confirm: "Are you sure ?"} , class:"btn btn-xs btn-danger btn-indix"%> </td>
    </tr>
  
    <% end %>
  </table>
</div>