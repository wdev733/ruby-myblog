
<%= render 'shared/errors', obj: @article %>

<div class= "row">
  <div class="col-xs-12">
    
    <%= form_for(@article, :html => {class: "form-horizontal", role: "form"}) do |f| %>
    <div class= "form-group">
          <%= f.label :title, class: "control-label col-sm-2" %> 
      <div class= "col-sm-8">
          <%= f.text_field :title, class: "form-control", placeholder: "Title of Article", autofocus: true %>
      </div>
    </div>
    
    <div class="form-group">
          <%= f.label :description, class: "control-label col-sm-2" %>
      <div class= "col-sm-8">
          <%= f.text_area :description, rows: 10, class: "form-control", placeholder: "Body of Article", autofocus: true %>
      </div>
    </div>

    <div class= "form-group">
          <%= f.label :image, class: "control-label col-sm-2" %> 
      <div class= "col-sm-8">
          <%= f.file_field :image, class: "form-control" %>
      </div>
    </div>


    <div class="form-group">
      <div class="row">
        <div class="col-sm-offset-2 col-sm-8">
          <%= f.collection_check_boxes :category_ids, Category.all, :id, :name do |cb| %>
          <% cb.label(class: "checkbox-inline input_checkbox") {cb.check_box(class: "checkbox") + cb.text} %>
          <% end %>
        </div>
      </div>
    </div>
    
    <div class= "form-group">
      <div class= "col-sm-offset-2 col-sm-10">
          <%= f.submit class: "btn btn-danger btn-lg"%>        
      </div>
    </div>
    
    <div class="col-xs-4 col-xs-offset-4">
      [ <%= link_to "Cancel request and return to articles listing", articles_path %> ]
    </div>


  </div>
</div>

<% end %>
